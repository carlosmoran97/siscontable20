<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Productos</title>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="js/saveProduct.js"></script>
    <script src="js/asignarAccion.js"></script>
  </head>
  <body>
    {{> nav}}
    <h2>{{message}}</h2>
    <form action="/productos" method="post">
      <p>Agregar un nuevo producto</p>
      <!--  codigo del producto-->
      <p>
      <label for="codigo">Código: </label>
      <input id="codigo" type="text" required name="codigo" placeholder="codigo">
      </p>
      <!-- nombre del producto -->
      <p>
      <label for="nombre">Nombre: </label>
      <input id="nombre" type="text"  name="nombre" placeholder="Ingrese el nombre del producto">
      </p>
      <!-- descripcion del producto -->
      <p>
      <label for="descripcion">Descripcion: </label>
      <textarea id="descripcion"  name="descripcion" placeholder="Ingrese la descripción del producto"></textarea>
      </p>
      <p>
      <label for="precioUnitario">Precio unitario: </label>
      <input type="text" id="precioUnitario"  name="precioUnitario" placeholder="Precio unitario">
    </p>
      <input type="submit" value="Guardar" onclick="asignarAccion('guardar');">
      <input type="submit" value="Actualizar" onclick="asignarAccion('actualizar');">
      <input type="submit" value="Eliminar" onclick="asignarAccion('eliminar');">
      <input type="hidden" id="accion" name="accion" value="guardar">
    </form>
    <table border="1" id="tabla-productos">

    </table>
    {{> footer}}
    <script src="js/fillTable.js"></script>
  </body>
</html>
